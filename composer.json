{
    "name": "league/period",
    "type": "library",
    "description" : "Time range API for PHP",
    "keywords": [
        "date",
        "time",
        "timeline",
        "datetime",
        "range",
        "interval",
        "dateinterval",
        "dateperiod",
        "calendar",
        "schedule",
        "boundaries",
        "sequence",
        "collection",
        "period",
        "gap",
        "intersections",
        "unions"
    ],
    "license": "MIT",
    "homepage": "http://period.thephpleague.com",
    "authors": [
        {
            "name" : "Ignace Nyamagana Butera",
            "email" : "nyamsprod@gmail.com",
            "homepage" : "https://github.com/nyamsprod/",
            "role" : "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/thephpleague/period/issues"
    },
    "require": {
        "php" : "^7.1.3",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "infection/infection": "^0.13",
        "phpunit/phpunit" : "^7.0|^8.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "League\\Period\\": "src"
        },
        "files": ["src/functions_include.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "LeagueTest\\Period\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpstan-src": "phpstan analyse -l max -c phpstan.src.neon src",
        "phpstan-tests": "phpstan analyse -l max -c phpstan.tests.neon tests",
        "phpstan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpunit": "phpunit --coverage-text",
        "infection-linux": "infection -j$(nproc) --coverage=build --ignore-msi-with-no-mutations --min-coverted-msi=80",
        "infection-osx": "infection -j$(sysctl -n hw.ncpu) --coverage=build --ignore-msi-with-no-mutations --min-coverted-msi=80",
        "test": [
            "@phpcs",
            "@phpstan-src",
            "@phpstan-tests",
            "@phpunit",
            "@infection-linux"
        ],
        "test-osx": [
            "@phpcs",
            "@phpstan-src",
            "@phpstan-tests",
            "@phpunit",
            "@infection-osx"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
